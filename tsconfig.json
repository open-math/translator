{
    "compilerOptions":
    {
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,

        "baseUrl": "./",
        "paths": {
            "core/*": ["core/*"],
            "content/*": ["content/*"]
        },

        "target": "ESNext",
        "module": "CommonJS",

        "outDir": "dist/node",
        "declaration": true,
        "incremental": true,
    },

    "ts-node":
    {
        "require": ["tsconfig-paths/register"]
    }
}