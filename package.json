{
    "name": "translator",
    "version": "1.0.9",
    "exports": {
        ".": "./dist/src/core/index.js",
        "./content": "./dist/src/content/index.js",
        "./node": "./dist/src/core/node/index.js"
    },
    "scripts": {
        "clear": "npx ts-node core/cli/clear",
        "core": "tsc && tsc-alias",
        "content": "npx ts-node core/cli/content/build",
        "build": "npm run clear && npm run core && npm run content",
        "build-dev": "npm run clear && npm run core && npm run content -- --dev",
        "watch": "npx nodemon --watch content/**/* --watch core/**/* --ext * --exec \"npm run build-dev\""
    },
    "devDependencies": {
        "esbuild": "^0.19.2",
        "glob": "^10.3.3",
        "nodemon": "^3.0.1",
        "pug": "^3.0.2",
        "rimraf": "^5.0.1",
        "sass": "^1.66.1",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.7",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "bitran": "^0.0.10",
        "katex": "^0.16.8",
        "slugify": "^1.6.6",
        "uuid": "^9.0.1"
    }
}
